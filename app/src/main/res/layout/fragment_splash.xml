<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="com.likhachev.e_journal.presentation.SplashFragment">

    <TextView
        android:id="@+id/tittle_text_view"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/anonymous_pro_bold"
        android:text="Мобильный помощник для учителей и учеников!"
        android:textAlignment="center"
        android:textColor="@color/title_text_color"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Мобильный помощник для учителей и учеников!" />

    <TextView
        android:id="@+id/bottom_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/anonymous_pro_regular"
        android:text="E-Journal"
        android:textColor="@color/colorPrimary"
        android:textSize="46sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/image_card_view"
        app:layout_constraintStart_toStartOf="@+id/image_card_view"
        app:layout_constraintTop_toBottomOf="@+id/image_card_view"
        tools:text="E-Journal" />

    <androidx.cardview.widget.CardView
        android:id="@+id/image_card_view"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="@id/tittle_text_view"
        app:layout_constraintStart_toStartOf="@id/tittle_text_view"
        app:layout_constraintTop_toBottomOf="@id/tittle_text_view">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/splash_screen_img" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>