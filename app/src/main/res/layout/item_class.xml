<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:strokeWidth="3dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="10dp"
    android:backgroundTint="@color/card_background_color"
    android:layout_marginBottom="14dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/class_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/anonymous_pro_regular"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="@string/class_text_view"
                android:textColor="@color/title_text_color"
                tools:text="Класс: " />

            <TextView
                android:id="@+id/class_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/anonymous_pro_regular"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                tools:text="11-Б"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/students_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/anonymous_pro_regular"
                android:text="Учащихся: "
                android:textSize="16sp"
                android:textColor="@color/title_text_color"
                android:textStyle="bold"
                tools:text="Учащихся: " />

            <TextView
                android:id="@+id/student_count_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/anonymous_pro_regular"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                tools:text="28"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/subject_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/anonymous_pro_regular"
                android:text="@string/subject_text_view"
                android:textSize="16sp"
                android:textColor="@color/title_text_color"
                android:textStyle="bold"
                tools:text="Предмет: " />

            <TextView
                android:id="@+id/subject_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/anonymous_pro_regular"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                tools:text="История"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>