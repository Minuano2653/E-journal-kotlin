<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ejournal" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/white</item>

        <!-- Цвет статус-бара -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Ejournal" parent="Base.Theme.Ejournal" />

    <style name="CustomSearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="android:fontFamily">@font/anonymous_pro_regular</item>
        <item name="android:textColorHint">@color/brown</item>
        <item name="searchIcon">@null</item>
    </style>

    <style name="BottomNavigationViewTextStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/anonymous_pro_regular</item>
    </style>

    <style name="Theme.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="CustomDatePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Цвет акцента (например, кнопок) -->
        <item name="colorAccent">@color/orange</item>
        <item name="fontFamily">@font/anonymous_pro_regular</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:textColorPrimary">@color/brown</item>
        <item name="android:backgroundTint">@color/light_orange</item>
    </style>

</resources>